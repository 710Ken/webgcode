<div class="controls">
    <div class="controlPanel">
        <h3><label for="text">Text</label></h3>

        <div class="controlPanelContent">
            {{input type="text" id="text" valueBinding="text" title="your text"}}
        </div>
    </div>
    <div class="controlPanel">
        <h3>Font</h3>

        <div class="controlPanelContent">
            <label for="fontSize">Size:</label><br>
            {{number-input type="number" id="fontSize" placeholder="Font Size" valueBinding="fontSize" min="0.01" max="500"}}
            <br>
            {{view Ember.Select content=controllers.fonts value=fontName optionLabelPath="content.family" optionValuePath="content.family"}}
            <br>
            {{#if hasFontVariants}}
                {{view Ember.Select content=font.variants value=fontVariant}}
            {{else}}
                {{font.variants}}
            {{/if}}
        </div>
    </div>

    <div class="controlPanel">
        <h3>Tool</h3>

        <div class="controlPanelContent">
            <label for="toolDiameter" title="in mm">Tool Diameter:</label><br>
            {{number-input type="number" id="toolDiameter" placeholder="tool diameter"
            valueBinding="toolDiameter" min="0" action="launchComputationImmediately"}}
            <br>
            <label for="radialEngagement" title="ratio ]0-1]">Radial Engagement:</label><br>
            {{number-input type="number" id="radialEngagement" placeholder="radial engagement"
            valueBinding="radialEngagementRatio" min="0" max="1" step="0.05" action="launchComputationImmediately"}}
            <br>

            <div class="controlPanel">
                <h3>Pocket</h3>

                <div class="controlPanelContent">
                    <label for="workZ" title="in mm">Work Z:</label><br>
                    {{number-input type="number" id="workZ" placeholder="workZ"
                    valueBinding="workZ" action="computeGCode"}}
                    <br>
                    <label for="travelZ" title="in mm">Travel Z:</label><br>
                    {{number-input type="number" id="travelZ" placeholder="travelZ"
                    valueBinding="travelZ" action="computeGCode"}}
                    <br>
                    <label for="feedRate" title="in mm/min">Feed Rate:</label><br>
                    {{number-input type="number" id="feedRate" placeholder="feedRate"
                    valueBinding="feedRate" action="computeGCode"}}
                </div>
            </div>
        </div>
    </div>
</div>
<div id="drawing">
    {{view TextApplication.OperationView}}
</div>
{{textarea id="code" value=code rows="400"}}