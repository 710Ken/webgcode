<div style="display: flex;flex-direction: column;align-items:flex-start;overflow-y: scroll">
    {{#if firebase.isAuthenticated}}
        <h2>Jobs
            <button title="create new job" class="btn btn-default" {{action "createJob"}}>+</button>
            <button class="btn btn-default" {{action "createExample"}}>Create Example</button>
        </h2>
        <div class="list-group" style="display:inline-block;">
            {{#each model}}
                {{#link-to "job" this._data.job.id classNames="list-group-item"}}{{name}}{{/link-to}}
            {{else}}
                No job yet.
            {{/each}}
        </div>
    {{else}}
        Welcome, you need to log in before anything else.
    {{/if}}
</div>